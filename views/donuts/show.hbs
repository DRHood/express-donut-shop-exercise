<main>

	<h2>You are viewing:

		{{ donut.name }}

	</h2>

	<a href="/">Return to Home Page</a>

	<div class="donut-container-show">
		<h2 id="donut-name">

				{{ donut.name }}

		</h2>

				<img src="{{ donut.img }}" alt="">

		<br>
		<h3>Description:</h3>
			<p>

				{{ donut.description }}

			</p><br>
		<h3>Price:</h3>
			<p id="cost">$

				{{ donut.price }} each</p><br>

			<h3 id="quantity">

	 				{{ donut.qty }} remaining

			</h3>

			<br>

			<a href="/{{ donut.id }}/edit">Edit donut</a>

			<form action="{{ donut }}/buy?_method=PUT" method="POST">
				<input type="submit" value="Buy Now!">
			</form>

		</div>

		<form action="/{{ donut.id }}?_method=DELETE" method="POST">
			<input type="submit" value="Delete Donut">
		</form>
</main>
