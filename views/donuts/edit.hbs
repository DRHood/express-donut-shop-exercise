<main>

	<h2>EDIT THIS DONUT!</h2>

	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="donut-container-show">


		<form action="/{{ donut.id }}?_method=PUT" method="POST">
			Name: <input type="text" name="name" value="{{ donut.name }}"/><br/>
			Description: <input type="text" name="description" value="{{ donut.description}}"/><br/>
			Image: <input type="text" name="img" value="{{ donut.img }}"/><br/>
			Price: <input type="number" name="price" value="{{ donut.price }}"/><br/>
			Quantity: <input type="number" name="qty" value="{{ donut.qty }}"/><br/>
			Coffee: <select name="coffee" id="">
						<option value="" selected>No Coffee</option>
						{{!-- TODO: add selected --}}
						{{#each coffees }}
							<option value="{{ id }}">{{ name }}</option>
						{{/each }}
					</select><br/>
			<input type="submit" value="Edit"/>
		</form>


		<div id="img-preview">
			<img src="{{donut.img}}">
		</div>

	</div>
</main>
